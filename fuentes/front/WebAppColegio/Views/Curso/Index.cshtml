@using  WebAppColegio.Models.Response
@model IEnumerable<WebAppColegio.Models.Response.CursoResponse>

 

@{
    ViewData["Title"] = "Principal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    //var autenticacionResponse = JsonConvert.DeserializeObject<AutenticacionResponse>(Convert.ToString(TempData["Permisos"]));
    // var autenticacionResponse = System.Text.Json.JsonSerializer.Deserialize<WebAppColegio.Models.Response.AutenticacionResponse>(HttpContext.Session.Get("Profile"));
}
<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-12">

        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Curso/Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Cursos</li>
        </ol>
    </div>

    <div class="row">
        <!-- General Colors-->
        <div class="col-lg-12">
            <div class="card mb-12">
                @*<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">General Colors</h6>
                    </div>*@
                <div class="card-body">
                    <div class="row">
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-6 mb-4">
                                    <div class="card text-white" style="background-color: #@item.estilo">
                                        <div class="card-body">
                                            @{
                                                var _codigoCurso = item.codigo;
                                                var _codigoClase = item.clase;
                                                var _nombreCurso = item.nombre;
                                            }
                                            @*<div class="text-white-50 small">#Ingresar</div>*@
                                            <a class="sidebar-brand d-flex align-items-center" style="color: white;"
                                               asp-controller="Curso" asp-route-curso=@_codigoCurso  asp-route-clase=@_codigoClase asp-route-cursoNombre=@_nombreCurso asp-action="Detalle">@Html.DisplayFor(modelItem => item.nombre)</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                        <div class="col-lg-6 mb-4">

                        </div>
                        <div class="col-lg-6 mb-4">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--Row-->
</div> 

